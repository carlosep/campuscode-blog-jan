<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% @post.comments.each do |comment| %>
  <p><%= comment.author %></p>
<% end %>
<%= form_for [@post, @post.comments.build] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.submit "Create Comment" %>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
