<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h2>Comments: </h2>

<% @post.comments.each do |comment| %>
  <% if comment %>
    <p><strong><%= comment.user.name %>:<br></strong></p>
    <p><%= comment.text %></p>
  <% end %>
<% end %>

<% if current_user %>
  <h2>Write a comment:</h2>

  <%= render 'posts/comment' %>
<% else %>
    <%= link_to 'Log in', user_session_path %> to leave a comment.
<% end %>
