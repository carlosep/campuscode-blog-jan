<p id="notice"><%= notice %></p>

<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<h2>Comments: </h2>

<% @post.comments.each do |comment| %>
    <p><strong><%= comment.author %>:</strong> <%= (comment.email) %> </p>
    <p><%= comment.text %></p>
<% end %>

<%= render 'posts/comment' %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
