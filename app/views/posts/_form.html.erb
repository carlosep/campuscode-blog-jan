<div class="page-header">
  <h1><%= header_text %></h1>
</div>
<div class="col-xs-8	col-xs-offset-2">
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, for: "titleField" %><br>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Insert a title for your post', id: 'titleField' %>
    </div>
    <div class="form-group">
      <%= f.label :body %><br>
      <%= f.text_area :body, class: 'form-control', placeholder: 'What would you like to share with the world?' %>
    </div>
    <div class="actions">
      <%= f.submit submit_text, class: 'btn	btn-success' %>
      <%= link_to 'Cancel', posts_path, class:"btn btn-primary" %>
      <% if current_page?(edit_post_path(@post)) %>
        <%= button_tag 'Reset', type: :reset, class:"btn btn-default" %>
      <% end %>
    </div>
  <% end %>
</div>
