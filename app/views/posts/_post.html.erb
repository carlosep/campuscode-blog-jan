<div	class="col-sm-12 col-md-6 post">
  <h2><%= link_to post.title, post %></h2>
  <%= image_tag(post.image_url(:thumbnail), class: 'img-responsive')%>
  <h4><em><%= post.subtitle %></em></h4>
  <p class="text-justify post-text">
    <%text = strip_tags(post.body)%>
    <%= text.length > 80 ? text[0,80] + '...' : text %>
  </p>
  <p> <%= link_to 'More...', post %> </p>
  <p>Comments: <%= post.comments.count%></p>
  <% if current_user.try(:admin?) %>
    <%= link_to 'Edit', edit_post_path(post), :class=>"btn	btn-primary" %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn	btn-primary" %>
  <% end %>
</div>
